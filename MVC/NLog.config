<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log" >


  <!-- 共用區 -->
	<variable name="Mylayout" value="${longdate}|${uppercase:${level}}|${logger}|${message:withException=true}"/>
  <targets>
		<!--  儲存型態 -->
		<target xsi:type="File" name="file" fileName="${basedir}/Logs/${shortdate}.txt" layout="${Mylayout}"  />
		<target xsi:type="Mail" name="mail" layout="${Mylayout}" smtpServer="10.16.1.211" subject="Test通知" from="lex@soft-world.com.tw"   to="lex@soft-world.com.tw" body="${Mylayout}"  />
  </targets>

  <rules>
    <!--
    Write all events with minimal level of Debug (So Debug, Info, Warn, Error and Fatal, but not Trace)  to "f"
    <logger name="*" minlevel="Debug" writeTo="f" />
    -->
    <logger name="*" levels="Info,Error" writeTo="file" />
		<logger name="*" levels="Error" writeTo="mail" />
  </rules>
</nlog>